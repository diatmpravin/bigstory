<h1>Editing story</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Title_of_story %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Submited_By %><br />
    <%= f.text_field :image %>
  </p>
  <p>
    <%= f.label :Story %><br />
    <%= f.text_area :des %>
  </p>
  <p>
    <%= f.label :date_of_submition %><br />
    <%= f.date_select :date_submit %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @story %> |
<%= link_to 'Back', stories_path %>